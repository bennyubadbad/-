#include <stdio.h>
#include <string.h>
#include <stdlib.h>
void main()
{
	int i;
	int a,b,count1=0,count2=0;
	printf("---------------");
	printf("|             |");
	printf("|1.对 战 模 式|");
	printf("|             |");
	printf("|2.练 习 模 式|");
	printf("|             |");
	printf("---------------");
	scanf("%d",&i);
	switch(i)
	{
	case 1: A();
	case 2: B();
	}
}
int A()
{
	int a,b,count1=0,count2=0;
	while(1)
	{
		printf("Jian=0,Shi=1,Bu=2");
		scanf("%d",&b);
		a=rand()%3;
		if (b<=2&&b>=0)
		{
			if(a==0)
			{
				if(b==0){
					printf("we draw!\n");
				}
				else if(b==1){
					printf("u win!\n");
					count1++;
				}
				else if(b==2)
				{
					printf("u lose!\n");
					count2++;
				}
			}
			else if(a==1)
			{
				if(b==1){
					printf("we draw!\n");
				}
				else if(b==2){
					printf("u win!\n");count1++;
				}
				else if(b==0){
					printf("u lose!\n");count2++;
				}
			}
			else if(a==2)
			{
				if(b==2) printf("we draw!\n");
				else if(b==0){
					printf("u win!\n");count1++;
				}
				else if(b==1)
				{printf("u lose!\n");count2++;
				}
			}
		}
		else printf("u bad bad/n");
		if(count1==2||count2==2)break;
	}
	if (count1==2) printf("u win!\n");
	else printf("u lose\n");
}
int B()
{
	int a,b=0;
	while(1)
	{
		printf("请输入你要出的拳(剪刀为0，石头为1，布为2):");
		scanf("%d",&b);
		a=rand()%3;
		switch(b)
		{
		case 1:
			if(a==1)
			{
				printf("平局！\n");
			}
			else if(a==0)
			{
				printf("你赢了！\n");
			}
			else 
			{
				printf("你输了！\n");
			}
			break;
		case 2:
			if(a==2)
			{
				printf("平局！\n");
			}
			else if(a==1)
			{
				printf("你赢了！\n");
			}
			else 
			{
				printf("你输了！\n");
			}
			break;
			
		case 0:
			
			if(a==0)
			{
				printf("平局！\n");
			}
			else if(a==2)
			{
				printf("你赢了！\n");
			}
			else 
			{
			printf("你输了！\n");
			}
		default:
			printf("输入错误！\n");
			break;
		}
	}
	return 0;
}
